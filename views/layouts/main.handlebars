    </head>
    <body>
        <div id="mainDiv">
            {{{body}}}
            {{#each posts}}
                <a href="{{url}}">
                    <h1 id="titulo">{{math @index "+" 1}}. {{titleURL title url}}</h1>
                </a>
                <span id="subtitulo">{{likes}} points by {{username}} {{prettifyDate creationTime}} | flag | hide | </span>
                <a id="subtitulo" href="item?id={{id}}">{{commentsNum}} comments</a>
            {{/each}}
            <br>
        </div>
    </body>
</html>